#include <stdio.h>
#define PI 3.1416

 main() 
{
//Local Declarations
float circ;
float area;
float radius;

//Statements
  printf("\nPlease enter the value of the radius:");
  scanf("%f", &radius);

  circ=2 *PI *radius;
  area=PI*radius*radius;

  printf("\n Radius is:       %10.2f", radius);
  printf("\n Circumference is:%10.2f", circ);
  printf("\n Area is:         %10.2f", area);

  return 0;
}
